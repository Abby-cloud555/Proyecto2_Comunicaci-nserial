/* Private variables ---------------------------------------------------------*/
I2C_HandleTypeDef hi2c1;

SPI_HandleTypeDef hspi1;

UART_HandleTypeDef huart2;

/* USER CODE BEGIN PV */
static char buffer_recepcion[32];
char opcion_menu; //La opción principal que va a escoger el usuario puede ser 1 o 2
char comando[68]; //Crear el buffer del comando que va a recibir por parte del usuario para encender las leds
int led = 0; //Iniciar el comendo de led en 0
int tiempo = 0;

//Variables para la comunicación I2C
uint8_t bufferI2C;
uint8_t tx_buffer[1] = {0}; //Buffer de transmisión de datos (para este proyecto no se utiliza)
uint8_t rx_buffer[8]; //Recibir 8 bits para el valor del pot
char msg[64]; //mensaje para enviar

/* USER CODE END PV */

