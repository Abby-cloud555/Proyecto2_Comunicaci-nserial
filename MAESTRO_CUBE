/* Private user code ---------------------------------------------------------*/
/* USER CODE BEGIN 0 */
void uart_print(const char *msg) {
    HAL_UART_Transmit(&huart2, (uint8_t*)msg, strlen(msg), HAL_MAX_DELAY);
}


//Función para leer el comando ingresado por UART para la lectura de las leds
//Leer la línea ingresada para el comando
void uart_leer_comando(char *comando_recibido, int tam_maximo) {
    int posicion = 0;
    uint8_t caracter = 0;

    while (posicion < tam_maximo - 1) {
        // Esperar un caracter desde el monitor serial
        HAL_UART_Receive(&huart2, &caracter, 1, HAL_MAX_DELAY);

        //Cuando el usuario da enter
        if (caracter == '\r' || caracter == '\n') {
        	break;
        }

        // Aceptar solo números y comas
        if ((caracter >= '0' && caracter <= '9') || caracter == ',') {
        	comando_recibido[posicion] = caracter;//Guardar cada caracter dentro del arreglo
        	posicion = posicion + 1; //Guardamos cada caracter en la posición siguiente dentro del arreglo
            HAL_UART_Transmit(&huart2, &caracter, 1, HAL_MAX_DELAY);
        }
    }

    comando_recibido[posicion] = '\0';
    uart_print("\r\n");
}


//Enviar el mensaje mediante SPI
void spi_send(const char *msg) {
    HAL_GPIO_WritePin(CS_SPI1_GPIO_Port, CS_SPI1_Pin, GPIO_PIN_RESET);
    HAL_SPI_Transmit(&hspi1, (uint8_t*)msg, strlen(msg), HAL_MAX_DELAY);
    HAL_GPIO_WritePin(CS_SPI1_GPIO_Port, CS_SPI1_Pin, GPIO_PIN_SET);
}

//Función para mostrar el menú principal en el monitor serial
void loop_menu(void) {

    while (1) {
        uart_print("\r\n MENU PRINCIPAL \r\n");
        uart_print("\r\n Ingrese el número del tipo de comunicación a realizar\r\n");
        uart_print("\r\n 1) Comunicación SPI: Encender un led \r\n");
        uart_print("\r\n 2) Comunicación I2C: Obtener valor del potenciómetro\r\n");

        HAL_UART_Receive(&huart2, (uint8_t*)&opcion_menu, 1, HAL_MAX_DELAY);
        uart_print("\r\n");

        if (opcion_menu == '1') {
            uart_print("Ingrese el número de Led y el tiempo en ms: (#Led,tiempo)\r\n");
            uart_print("\r\n 1. Rojo \r\n");
            uart_print("\r\n 2. Verde \r\n");
            uart_print("\r\n 3. Azul \r\n");
            memset(comando, 0, sizeof(comando)); //limpiar buffer para evitar errores por caracteres extra o que queden de anteriores
            uart_leer_comando(comando, sizeof(comando));

            if (sscanf(comando, "%d,%d", &led, &tiempo) != 2) { //Compara
                uart_print("El formato del comando es incorrecto\r\n");
                continue;
            }

            if (led >= 1 && led <= 3 && tiempo > 0) { //Condición para evaluar el comando ingresado
                spi_send(comando);//Enviar mediante SPI el comando de la led seleccionada
                continue;
            } else {
                uart_print("Valores fuera de rango \r\n");
                continue;
            }
        }

        else if (opcion_menu == '2') {
        	uart_print("\r\nSolicitando valor del potenciómetro al ESP32...\r\n");

        	            //Pedir los datos al ESP32 para leer el potenciómetro
        	            if (HAL_I2C_Master_Receive(&hi2c1, (deviceAddress << 1), rx_buffer, sizeof(rx_buffer), HAL_MAX_DELAY) == HAL_OK) {
        	                int pot_value = atoi((char*)rx_buffer);
        	                sprintf(msg, "El valor del POT es: %d\r\n", pot_value);
        	                uart_print(msg);
        	            } else {
        	                uart_print("Error en la lectura del potenciómetro\r\n");
        	            }

        	            uart_print("Lectura completada.\r\n");
        	        }

        	    }
        	}
/* USER CODE END 0 */

